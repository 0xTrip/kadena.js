{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dev-wallet-desktop",
  "version": "0.1.0",
  "identifier": "com.dev-wallet-desktop.app",
  "build": {
    "frontendDist": "../node_modules/@kadena/dev-wallet/dist",
    "beforeDevCommand": "pnpm --filter dev-wallet dev --port 1420",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "dev-wallet-desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}