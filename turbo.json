{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist",
        "fp",
        "lib",
        "theme",
        "types",
        ".next",
        "!.next/cache/**"
      ],
      "outputMode": "full"
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputMode": "full"
    },
    "lint": {
      "dependsOn": ["build"],
      "outputMode": "full"
    },
    "format": {
      "outputMode": "full"
    },
    "format:ci": {
      "outputMode": "full"
    }
  }
}
